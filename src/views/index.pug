extends layout/layout.pug

block content
    div.container
        div.mb-3
            div.list-group
                for user in users
                    div.list-group-item.d-flex.justify-content-between.align-items-center 
                        p.my-0 #{user.name}
                            span.ml-2.text-muted (#{user.email})
                        span.badge.badge-success Authenticated

        a(href=authorizationUrl).login-with-google-btn Authorize